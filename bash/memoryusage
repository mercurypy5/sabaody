--current
alias k="ps -u $USER -o pid,%mem,%cpu,comm | sort -b -k2 | fzf"

--original
pid=$(ps -u $USER -o pid,%mem,%cpu,comm | sort -b -k2 -r| sed -n '1!p' | dmenu -i -l 15 | awk '{print $1}')

--fzf
ps -u $USER -o pid,%mem,%cpu,comm | sort -b -k2 | fzf

--wmenu
ps -u $USER -o pid,%mem,%cpu,comm | sort -b -k2 -r | wmenu -i -l 15 

--DerrickJolicoeur
alias k="ps -u $USER -o pid=,%mem=,%cpu=,comm= | fzf | xargs | cut-d"" -f1 | xargs -r kill -15"
